<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_4sdp">


<ImageView
    android:id="@+id/imageProfil"
    android:layout_width="@dimen/_25sdp"
    android:layout_height="@dimen/_25sdp"
    android:background="@drawable/background_image"
    android:scaleType="centerCrop"
    app:layout_constraintBottom_toBottomOf="@+id/texmessage_id"
    app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/username_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/_7ssp"
        app:layout_constraintStart_toStartOf="@id/imageProfil"
        app:layout_constraintTop_toTopOf="@+id/texmessage_id" />

    <TextView
        android:id="@+id/texmessage_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:background="@drawable/background_received_message"
        android:padding="@dimen/_12sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toEndOf="@+id/imageProfil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.75"/>

    <TextView
        android:id="@+id/dateandtime_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_7ssp"
        app:layout_constraintStart_toStartOf="@id/texmessage_id"
        app:layout_constraintTop_toBottomOf="@+id/texmessage_id" />

</androidx.constraintlayout.widget.ConstraintLayout>